@model Web.Core.ToDoTask.ViewModels.ChangeStateViewModel

<form asp-controller="ToDoTask" asp-action="ChangeTaskState" method="post">
    <div class="form-group">
        <label asp-for="StateId" class="control-label"></label>
        <select asp-for="StateId" asp-items="@Model.Status" class="form-control">
            <option value="">گزینه مورد نظر را انتخاب کنید...</option>
        </select>
        <span class="help-block">
            <span asp-validation-for="StateId" class="text-danger"></span>
        </span>
        <input asp-for="Id" />
        <button onclick="event.preventDefault();saveAndupdate($(this.form), '@Url.Action("ChangeTaskState", "ToDoTask")');"
                perform="action" class="btn red">
            ذخیره
        </button>
    </div>
</form>