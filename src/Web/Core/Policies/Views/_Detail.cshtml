@model Web.Core.Policies.ViewModels.PolicyViewModel

<form asp-controller="Policies" asp-action="AddDetail" id="frmPolicyDetail" method="post">
    <div class="modal-body">
        <div class="container">
            <div class="row">
                <input asp-for="Id" />
                <div class="form-group col-md-12">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="ProtocolId" class="control-label"></label>
                    <select asp-for="ProtocolId" asp-items="@Model.ProtocolSelectList" class="form-control">
                        <option value="">لطفا انتخاب کنید...</option>
                    </select>
                    <span asp-validation-for="ProtocolId" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">خروج</button>
                @{ var url = Model.Id > 0 ? Url.Action("EditDetail", "Policies") : Url.Action("AddDetail", "Policies");}
                <button onclick="event.preventDefault();saveAndupdate($(this.form), '@url');" type="button" class="btn btn-primary">ذخیره</button>
            </div>
        </div>
    </div>
</form>
