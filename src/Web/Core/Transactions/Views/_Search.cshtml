@model Web.Core.Transactions.ViewModels.SearchViewModel

<form asp-controller="TransactionController" asp-action="GetTransactionDetail"  method="get">
    <div class="modal-body">
        <div class="container">

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="SourcePan" class="control-label"></label>
                    <input asp-for="SourcePan" class="form-control" />
                    
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="TargetPan" class="control-label"></label>
                    <input asp-for="TargetPan" class="form-control" />              
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />

                </div>
                @*<input hidden asp-for="Search" value="1" />*@
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary" perform="action">
                    جستجو
                </button>
                <button class="btn btn-default" data-dismiss="modal">خروج</button>
            </div>
        </div>
    </div>
</form>
